{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for api/notifications/menu.json",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "notificationList": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "comment": {
            "type": "string"
          },
          "itemList": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "$type": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "value": {
                  "type": "string"
                },
                "url": {
                  "type": "string"
                },
                "stableUrl": {
                  "type": "string"
                },
                "testingUrl": {
                  "type": "string"
                },
                "unstableUrl": {
                  "type": "string"
                },
                "color": {
                  "type": "string"
                },
                "indent": {
                  "type": "number"
                },
                "includeIf": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "includeIfNot": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "$type",
                "label"
              ]
            }
          },
          "includeIf": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "includeIfNot": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }          
        },
        "required": [
          "date",
          "title",
          "itemList"
        ]
      }
    },
    "checkList": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "comment": {
            "type": "string"
          },
          "anyOfList": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "allOfList": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "$type": {
                        "type": "string"
                      },
                      "property": {
                        "type": "string"
                      },
                      "value": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "$type",
                      "property",
                      "value"
                    ]
                  }
                }
              },
              "required": [
                "allOfList"
              ]
            }
          }
        },
        "required": [
          "id",
          "anyOfList"
        ]
      }
    }
  },
  "required": [
    "$schema",
    "notificationList",
    "checkList"
  ]
}